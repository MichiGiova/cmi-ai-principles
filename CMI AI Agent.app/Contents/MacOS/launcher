#!/bin/bash

# Get the directory where the app bundle is located
APP_DIR="$(cd "$(dirname "$0")/../../.." && pwd)"

# Navigate to the project directory (where the app bundle is located)
cd "$APP_DIR"

# Check if we're in the right directory by looking for the launch script
if [ ! -f "launch-cmi-agent-terminal.sh" ]; then
    echo "Error: Could not find launch-cmi-agent-terminal.sh in the current directory."
    echo "Current directory: $(pwd)"
    echo "Please make sure the CMI AI Agent.app is in the same directory as the project files."
    read -p "Press Enter to exit..."
    exit 1
fi

# Launch the CMI AI Agent with terminal window
./launch-cmi-agent-terminal.sh
